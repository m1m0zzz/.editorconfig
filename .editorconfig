# EditorConfig is awesome: https://editorconfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true
indent_size = 2

# 4 space indent
[*.{py,c,cpp,h,hpp}]
indent_size = 4

[Makefile]
indent_style = tab

[*.{md,mdx}]
trim_trailing_whitespace = false
